{
  "name": "wangshangpingjuan-app",
  "version": "1.0.0",
  "description": "Wang Shang Ping Juan App",
  "author": "Your Name <you@example.com>",
  "main": "src/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder --win --mac --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "build": {
    "appId": "com.example.yourapp",
    "productName": "wangshangpingjuan",
    "copyright": "Copyright Â© 2023 Your Name",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!node_modules/{@types,.cache}"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/win.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "build/mac.icns",
      "identity": null
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^36.5.0",
    "electron-builder": "^26.0.12"
  }
}
